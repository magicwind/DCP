@model DCP.ViewModel.ConnectionVMs.ConnectionVM

<wt:form vm="@Model">
<wt:row items-per-row="ItemsPerRowEnum.Two">
<wt:textbox field="Entity.Name" />
<wt:combobox field="Entity.Type" />
<wt:textbox field="Entity.Host" />
<wt:textbox field="Entity.Port" />
<wt:textbox field="Entity.Database" />
<wt:textbox field="Entity.Username" />
<wt:textbox is-password="true" field="Entity.Password" />
</wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>